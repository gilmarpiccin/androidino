<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 	<TextView 
 	    android:id="@+id/txtSenhaAtual"
 	    android:text="@string/senhaAtual"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
 	    
 	<EditText
        android:id="@+id/edtSenhaAtual"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    <TextView 
 	    android:id="@+id/txtSenhaNova"
 	    android:text="@string/senhaNova"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
    />
 	    
 	<EditText
        android:id="@+id/edtSenhaNova"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

    </EditText>
 	
 	
 	<TextView 
 	    android:id="@+id/txtConfirmarSenha"
 	    android:text="@string/confirmarSenha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
    />
 	    
 	<EditText
        android:id="@+id/edtConfirmarSenha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

    </EditText>
    
 	<Button
 	    android:id="@+id/btnValidarSenha" 
 	    android:text="@string/btnconfirmarSenha"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	/>
 	
</LinearLayout>
 	    